---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  
  // Extract all tags
  const tagMap = new Map<string, any[]>();
  
  posts.forEach(post => {
    if (post.data.tags && Array.isArray(post.data.tags)) {
      post.data.tags.forEach(tag => {
        if (tag && tag.trim()) {
          if (!tagMap.has(tag)) {
            tagMap.set(tag, []);
          }
          tagMap.get(tag)?.push(post);
        }
      });
    }
  });

  // Generate paths for each tag
  return Array.from(tagMap.entries()).map(([tagName, tagPosts]) => {
    const tagSlug = tagName
      .toLowerCase()
      .normalize('NFD')
      .replace(/[\u0300-\u036f]/g, '') // Remove diacritics
      .replace(/[^a-z0-9\s-]/g, '') // Remove special characters
      .trim()
      .replace(/\s+/g, '-'); // Replace spaces with hyphens

    return {
      params: { slug: tagSlug },
      props: { 
        tagName, 
        posts: tagPosts.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
      }
    };
  });
}

const { tagName, posts } = Astro.props;
---

<BaseLayout 
  title={`${tagName} - Jessica Things`} 
  description={`Browse all posts tagged with "${tagName}" on Jessica Things blog`}
>
  <div class="min-h-screen bg-white">
    <!-- Header -->
    <header class="border-b border-gray-200">
      <div class="container mx-auto px-4 py-6">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-4">
            <h1 class="text-3xl font-bold text-gray-900">
              <a href="/" class="hover:text-gray-700">Jessica Things</a>
            </h1>
            <span class="text-sm text-gray-500">Beauty, Fashion & Lifestyle</span>
          </div>
          <nav class="hidden md:flex space-x-6">
            <a href="/" class="text-gray-700 hover:text-gray-900">Home</a>
            <a href="/categories" class="text-gray-700 hover:text-gray-900">Categories</a>
            <a href="/tags" class="text-gray-700 hover:text-gray-900">Tags</a>
            <a href="/about" class="text-gray-700 hover:text-gray-900">About</a>
            <a href="/contact" class="text-gray-700 hover:text-gray-900">Contact</a>
          </nav>
        </div>
      </div>
    </header>

    <main class="container mx-auto px-4 py-8">
      <!-- Breadcrumb -->
      <nav class="mb-8" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2 text-sm text-gray-500">
          <li>
            <a href="/" class="hover:text-gray-700">Home</a>
          </li>
          <li>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </li>
          <li>
            <a href="/tags" class="hover:text-gray-700">Tags</a>
          </li>
          <li>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </li>
          <li class="text-gray-900 font-medium" aria-current="page">
            #{tagName}
          </li>
        </ol>
      </nav>

      <!-- Tag Header -->
      <div class="text-center mb-12">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-lg mb-4">
          <span class="text-white font-bold text-2xl">
            #
          </span>
        </div>
        <h1 class="text-4xl font-bold text-gray-900 mb-4">#{tagName}</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          {posts.length} {posts.length === 1 ? 'post' : 'posts'} tagged with "{tagName}"
        </p>
      </div>

      <!-- Posts Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map((post) => (
          <article class="bg-white rounded-lg border border-gray-200 overflow-hidden hover:shadow-lg transition-all duration-300 group">
            <div class="relative overflow-hidden">
              <img 
                src={post.data.thumbnail || '/placeholder-image.svg'} 
                alt={post.data.title}
                class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
                loading="lazy"
              />
              <div class="absolute top-3 left-3">
                <span class="bg-blue-600 text-white px-2 py-1 rounded text-xs font-medium">
                  #{tagName}
                </span>
              </div>
              {post.data.categories && post.data.categories.length > 0 && (
                <div class="absolute top-3 right-3">
                  <span class="bg-black text-white px-2 py-1 rounded text-xs font-medium">
                    {post.data.categories[0]}
                  </span>
                </div>
              )}
            </div>
            
            <div class="p-6">
              <div class="text-sm text-gray-500 mb-2">
                {new Date(post.data.date).toLocaleDateString('en-US', { 
                  month: 'long', 
                  day: 'numeric', 
                  year: 'numeric' 
                })}
              </div>
              
              <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors line-clamp-2">
                <a href={`/${post.slug}`} class="hover:underline">
                  {post.data.title}
                </a>
              </h3>
              
              {(post.data.excerpt || post.data.description) && (
                <p class="text-gray-600 text-sm mb-4 line-clamp-3">
                  {post.data.excerpt || post.data.description}
                </p>
              )}

              {post.data.tags && post.data.tags.length > 1 && (
                <div class="mb-4">
                  <div class="flex flex-wrap gap-1">
                    {post.data.tags
                      .filter(tag => tag !== tagName) // Don't show the current tag
                      .slice(0, 3)
                      .map((tag) => (
                        <span class="text-xs bg-blue-100 text-blue-600 px-2 py-1 rounded">
                          #{tag}
                        </span>
                      ))}
                    {post.data.tags.length > 4 && (
                      <span class="text-xs text-gray-500">
                        +{post.data.tags.length - 4} more
                      </span>
                    )}
                  </div>
                </div>
              )}
              
              <a 
                href={`/${post.slug}`} 
                class="inline-flex items-center text-blue-600 hover:text-blue-700 text-sm font-medium group-hover:underline"
              >
                Read More
                <svg class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>

      <!-- Related Tags -->
      {posts.length > 0 && (
        <div class="mt-16 bg-gray-50 rounded-lg p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">Related Tags</h2>
          <div class="flex flex-wrap justify-center gap-2">
            {Array.from(new Set(
              posts
                .flatMap(post => post.data.tags || [])
                .filter(tag => tag && tag !== tagName)
            ))
            .slice(0, 10)
            .map((relatedTag) => {
              const relatedTagSlug = relatedTag
                .toLowerCase()
                .normalize('NFD')
                .replace(/[\u0300-\u036f]/g, '')
                .replace(/[^a-z0-9\s-]/g, '')
                .trim()
                .replace(/\s+/g, '-');
              
              return (
                <a 
                  href={`/tag/${relatedTagSlug}`}
                  class="inline-block px-3 py-1 bg-blue-100 text-blue-700 rounded-full hover:bg-blue-200 transition-colors text-sm"
                >
                  #{relatedTag}
                </a>
              );
            })}
          </div>
        </div>
      )}

      <!-- Back to Tags -->
      <div class="text-center mt-16">
        <a 
          href="/tags"
          class="inline-flex items-center bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors font-medium"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18"></path>
          </svg>
          Browse All Tags
        </a>
      </div>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-50 border-t border-gray-200 mt-16">
      <div class="container mx-auto px-4 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div>
            <h3 class="text-lg font-bold text-gray-900 mb-4">Jessica Things</h3>
            <p class="text-gray-600 text-sm">
              Your source for beauty, fashion, and lifestyle inspiration.
            </p>
          </div>
          <div>
            <h4 class="text-sm font-semibold text-gray-900 mb-4">Quick Links</h4>
            <ul class="space-y-2 text-sm text-gray-600">
              <li><a href="/" class="hover:text-gray-900">Home</a></li>
              <li><a href="/categories" class="hover:text-gray-900">Categories</a></li>
              <li><a href="/tags" class="hover:text-gray-900">Tags</a></li>
              <li><a href="/about" class="hover:text-gray-900">About</a></li>
              <li><a href="/contact" class="hover:text-gray-900">Contact</a></li>
            </ul>
          </div>
          <div>
            <h4 class="text-sm font-semibold text-gray-900 mb-4">Follow</h4>
            <ul class="space-y-2 text-sm text-gray-600">
              <li><a href="#" class="hover:text-gray-900">Instagram</a></li>
              <li><a href="#" class="hover:text-gray-900">YouTube</a></li>
              <li><a href="#" class="hover:text-gray-900">Twitter</a></li>
            </ul>
          </div>
          <div>
            <h4 class="text-sm font-semibold text-gray-900 mb-4">Newsletter</h4>
            <p class="text-sm text-gray-600 mb-4">Get the latest updates</p>
            <form class="flex">
              <input 
                type="email" 
                placeholder="Your email"
                class="flex-1 px-3 py-2 border border-gray-300 rounded-l text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
              <button 
                type="submit"
                class="bg-blue-600 text-white px-4 py-2 rounded-r hover:bg-blue-700 transition-colors"
              >
                Subscribe
              </button>
            </form>
          </div>
        </div>
        <div class="border-t border-gray-200 mt-8 pt-8 text-center text-sm text-gray-600">
          <p>&copy; 2025 Jessica Things. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </div>
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
